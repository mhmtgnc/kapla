// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  SERVICE_CENTER
}

enum AppointmentStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  role          UserRole
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  customerAppointments Appointment[] @relation("CustomerAppointments")
  serviceCenter       ServiceCenter?
  
  @@map("users")
}

model ServiceCenter {
  id          String   @id @default(cuid())
  userId      String   @unique
  shopName    String
  city        String
  services    String   // JSON string or comma-separated: "PPF, Cam Filmi, Ceramic Coating"
  rating      Float    @default(0)
  description String?  @db.Text
  address     String?
  phone       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[] @relation("ServiceCenterAppointments")
  
  @@map("service_centers")
}

model Appointment {
  id              String            @id @default(cuid())
  appointmentDate DateTime
  status          AppointmentStatus @default(PENDING)
  notes           String?           @db.Text
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  // Relations
  customerId      String
  serviceCenterId String
  
  customer      User          @relation("CustomerAppointments", fields: [customerId], references: [id], onDelete: Cascade)
  serviceCenter ServiceCenter @relation("ServiceCenterAppointments", fields: [serviceCenterId], references: [id], onDelete: Cascade)
  
  @@map("appointments")
  @@index([customerId])
  @@index([serviceCenterId])
  @@index([appointmentDate])
}

